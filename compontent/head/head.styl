    #header {background-color:#b72712;color:#fff;font-size:.18rem;line-height:.2rem;padding-bottom:.02rem;}
    #header .name {height:.2rem;padding:.09rem 0;overflow:hidden;}
    #header .name .meun {float:left;margin-left:.1rem;font-size:.3rem;}
    #header .name .search {float:right;margin-right:.1rem;font-size:.2rem;}
    #header .name .search a {color:#fff;}
    #header h2 {text-align:center;font-size:.18rem;font-weight:normal;}
    #header .tab {border-top:1px solid #9e9e9e;text-align:center;height:.4rem;overflow:hidden;border-bottom: 1px solid #9e9e9e;position: relative;}
    #header .tab span {display:block;float:left;width:33.33%;line-height:.39rem;}
    #header .tab span a {color:#fff;display:block;}
    #header .tab span.active {border-bottom:1px solid #fff;}
    #header .tab i {height: 1px;background-color:#fff;position: absolute;display:block;bottom:0;transition: left .2s ease;}