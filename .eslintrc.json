{
    "extends": "airbnb/base",
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "import/no-extraneous-dependencies": 0,
        "linebreak-style": ["error", "windows"],
        "import/first": 0,
        "indent": [2, 4],
        "func-names": 0,
        "no-console": 0,
        "eol-last": 0,
        "no-unused-vars": 0,
        "no-useless-constructor": 0,
        "class-methods-use-this": 0,
        "no-trailing-spaces": 0,
        "object-curly-spacing": 0,
        "quote-props": 0,
        "prefer-template": 0,
        "template-curly-spacing": 0
    },
    "globals": {
        "import": true,
        "$": true
    }
}